{
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://*:8080"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "ConnectionString": "mongodb://root:password@mongodb:27017",
    "DatabaseName": "RIM",
    "CombinedCollectionName": "SensorsData"
  },
  "MQTT": {
    "BrokerAddress": "mqtt-broker",
    "BrokerPort": 1883,
    "Topic": "sensor/data",
    "ClientId": "RIM_core"
  },
  "Blockchain": {
    "GanacheUrl": "http://ganache:7545",
    "ContractFilePath": "/docker-data/SensorContract.json",
    "GanacheLogFilePath": "/docker-data/ganache-output2.log"
  }
}
